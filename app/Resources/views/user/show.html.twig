{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table id="datatable-keytable" class="table">
        <thead>
        <tr>
            <th>Field</th>
            <th>Value</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>Id</td>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <td>Username</td>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <td>Roles</td>
            <td>{{ user.roles|join('|') }}</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <td>LastLogin</td>
            <td>{{ user.lastLogin|date }}</td>
        </tr>
        </tbody>
    </table>
    {{ form_start(delete_form) }}
    <a class="btn btn-default" href="{{ path('user_index') }}">Back to the list</a>
    <a class="btn btn-primary" href="{{ path('user_edit', { 'id': user.id }) }}">Edit</a>
    <input class="btn btn-danger" type="submit" value="Delete">
    {{ form_end(delete_form) }}
{% endblock %}
