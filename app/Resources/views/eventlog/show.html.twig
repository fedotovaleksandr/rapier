{% extends 'base.html.twig' %}

{% block body %}
    <h1>Eventlog</h1>

    <table  id="datatable-keytable" class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ eventLog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ eventLog.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ eventLog.description }}</td>
            </tr>
            <tr>
                <th>Timeinstant</th>
                <td>{% if eventLog.timeInstant %}{{ eventLog.timeInstant|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Action</th>
                <td>{{ eventLog.action }}</td>
            </tr>
            <tr>
                <th>Starttime</th>
                <td>{% if eventLog.startTime %}{{ eventLog.startTime|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ eventLog.duration }}</td>
            </tr>
            <tr>
                <th>Oldstatus</th>
                <td>{{ eventLog.oldStatus }}</td>
            </tr>
            <tr>
                <th>Newstatus</th>
                <td>{{ eventLog.newStatus }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('eventlog_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
